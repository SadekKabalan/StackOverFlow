@model StackOverFlow.Models.Profile
@{ ViewBag.Title = "Register";
    Layout = "~/Views/Shared/LayoutReg.cshtml"; }


<div class="row justify-content-center">

    <div class="col-sm-9 col-md-7 col-lg-5 mx-auto">
        <div class="card card-signin my-5">
            <header class="card-header">
                @Html.ActionLink("Login", "Login", "Profile", new { @class = "float-right btn btn-outline-primary mt-1" })
                <h4 class="card-title mt-2">Sign up</h4>
            </header>
            <article class="card-body">
                @using (Html.BeginForm("Signup", "Profile", FormMethod.Post))
                {
    <div class="form-row">
        <div class="col form-group">
            <label>First name </label>
            @Html.TextBoxFor(model => model.username, new { @class = "form-control" })


        </div> <!-- form-group end.// -->
    </div> <!-- form-row end.// -->
                    <div class="form-group">
                        <label>Email address</label>
                        @Html.TextBoxFor(model => model.Email, new { @class = "form-control" })

                    </div><!-- form-group end.// --><div class="form-row">
                        <div class="form-group col-md-6">
                            <label>University:</label>
                            <input type="text" name="example" list="exampleList" style="margin-top:10px;">
                            <datalist id="exampleList">
                                @foreach (var uni in Model.Universities)
                                {
                <option value="@uni">@uni</option>}
                            </datalist>

                        </div> <!-- form-group end.// -->
                        <div class="form-group col-md-6">
                            <label>Major</label>
                            @Html.TextBoxFor(model => model.major, new { @class = "form-control" })

                        </div> <!-- form-group end.// -->
                    </div> <!-- form-row.// -->
                                    <div class="form-group">
                                        <label>Create password</label>
                                        @Html.PasswordFor(model => model.Password, new { @class = "form-control" })

                                    </div> <!-- form-group end.// -->
                                                    <div class="custom-control custom-checkbox mb-3">
                                                        @Html.CheckBoxFor(model => model.remember, new { @checked = "checked" })
                                                        <label class="custom-control-label" for="customCheck1">Remember password</label>
                                                    </div>
                                                                    <div class="form-group">
                                                                        <button type="submit" class="btn btn-primary btn-block"> Register  </button>
                                                                    </div> <!-- form-group// -->}
            </article>
        </div>
    </div>

</div>
