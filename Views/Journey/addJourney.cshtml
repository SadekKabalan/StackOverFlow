@model StackOverFlow.Models.journies
@{
    ViewBag.Title = "questionForm";
    Layout = "~/Views/Shared/LayoutPage.cshtml";
}

<body>

    <div class="container" style="margin-top:20px; margin-bottom:20px; ">
        <div class="row">

            <div class="col-md-12 col-sm-12 " style="border:2px solid black;">
                @using (@Html.BeginForm("Submit", "Journey", FormMethod.Post))
                {
                    <h2>Ask A Public Question</h2>
                    @Html.ValidationSummary(true, "", new { @class = "text-danger" })
                    <form>
                        <div class="mb-3">
                            <label class="form-label">Title:</label>
                            <div class="form-text">Be honest and write an attractive title. </div>
                            @Html.TextBoxFor(model => model.title, new { @class = "form-control" })
                        </div>
                        <div class="mb-3">
                            <label class="form-label">Question Body:</label>
                            <div class="form-text">Write a well organized description about your Journey.</div>
                            @Html.TextAreaFor(model => model.body, new { @class = "form-control", @style = "height: 250px;" })
                            
                        </div>
                     

                        <div class="mb-3">
                            <button type="submit" class="btn btn-primary">Submit your Journey</button>
                        </div>

                    </form>
                }
            </div>
            </div>
        </div>

</body>


<script src="@Url.Content("~/Scripts/jquery-1.6.1.min.js")" type="text/javascript"></script>
<script src="@Url.Content("~/Scripts/jquery.validate.js")" type="text/javascript"></script>
<script src="@Url.Content("~/Scripts/jquery.validate.unobtrusive.js")" type="text/javascript"></script>

