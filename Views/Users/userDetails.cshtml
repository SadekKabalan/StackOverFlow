@model StackOverFlow.Models.users

@{ ViewBag.Title = "profileView";
                Layout = "~/Views/Shared/LayoutPage.cshtml"; }

<style>

    .profile-head {
        transform: translateY(5rem)
    }

    .cover {
        background-image: url(https://images.unsplash.com/photo-1530305408560-82d13781b33a?ixlib=rb-1.2.1&ixid=eyJhcHBfaWQiOjEyMDd9&auto=format&fit=crop&w=1352&q=80);
        background-size: cover;
        background-repeat: no-repeat
    }
</style>
<div class="row py-5 px-4">
    <div class="col-md-12 mx-auto">
        <div class="bg-white shadow">
            <div class="px-4 pt-0 pb-4 cover">
                <div class="row media align-items-end profile-head">
                    <div class="media-body mb-5 text-white">
                        <h4 class="mt-0 mb-0">
                            <label>@Model.username</label>
                        </h4>
                        <p class="small mb-4"></p>
                    </div>
                </div>
            </div>
            <div class="bg-light p-4 d-flex justify-content-end text-center">
                <ul class="list-inline mb-0">
                    <li class="list-inline-item">
                        <h5 class="font-weight-bold mb-0 d-block">@Model.nbQuestions</h5><small class="text-muted"> <i class="fas fa-image mr-1"></i>Questions</small>
                    </li>
                    <li class="list-inline-item">
                        <h5 class="font-weight-bold mb-0 d-block">@Model.nbAnswers</h5><small class="text-muted"> <i class="fas fa-user mr-1"></i>Answers</small>
                    </li>
                </ul>
            </div>
            <div class="px-4 py-3">
                <h5 class="mb-0">About</h5>
                <div class="p-4 rounded shadow-sm bg-light">
                    <p class="font-italic mb-0">@Model.GetProfile(Model.creator_ID).major</p>
                    <p class="font-italic mb-0">@Model.GetProfile(Model.creator_ID).Email</p>
                </div>
            </div>
            <div class="py-4 px-4">
                <h5 class="mb-0">Recent Questions</h5>
                <div class="row">
                    @foreach (var quest in Model.questions)
                    {
            <p style="font-size:22px; color:royalblue; ">" @Html.ActionLink(quest.title, "questionDetails", "Question", new { id = quest.question_ID, pageIndex = 1 }, new { @style = "text-decoration:none;" }) "</p>}
                </div>
                <div class="d-flex align-items-center justify-content-between mb-3">
                    @using (Html.BeginForm("filter", "Question", new { university = " " ,asker = Model.username }, FormMethod.Post))
                    {
                      <button type="submit" class="btn btn-link text-muted">Show all</button>}
                </div>
            </div>
        </div>
    </div>
</div>
